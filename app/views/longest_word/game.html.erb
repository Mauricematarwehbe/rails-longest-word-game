<h1>******** Welcome to the longest word-game !********</h1>
<p><%= @grid %></p>
<form action="/score">
  <label for="question">What's your best shot?</label>
  <input type="text" id="question" name="word" placeholder="Your proposition">
  <input type="hidden" name="grid" value=<%= @grid.join %>>
  <input type="hidden" name="start_time" value=<%= @start_time %>>
  <input type="submit" value="Submit">
</form>
